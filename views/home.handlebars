

<section class="bg-primary" id="about">
    <div class="container">
        <div class="row" >
            <div class="col-lg-10 col-lg-offset-1 text-center" >
                <h1 class="section-heading">Crawlr</h1>
                <h4>Crawlr is a web crawler that generates interactive graphical visualizations based upon a starting URL using graph traversal algorithms.<h4>




                <form action ="/" id="crawl-form" class="form-inline" method="post">

                <hr class="light">

                    <div class="form-group">
                      <p>
                        <label for="url">URL</label>
                        <input type="text" class="form-control" name="url" id="url" value="http://www.sciencekids.co.nz/sciencefacts/animals/cat.html" autocompete="on">
                        &nbsp;&nbsp;&nbsp;
                        <label for="search_term">Search Term</label>
                        <input type="text" class="form-control" name="search_term" id="search_term" value="">
                      </p>
                      <p>
                        <label for="levels">Levels</label>
                        <input type="number" class="form-control" name="levels" id="levels" value="4">
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <label for="crawl_type">Crawl Type</label>
                        <select name="crawl_type" id="crawl_type">
                          <option value="0">Depth-First</option>
                          <option value="1">Breadth-First</option>
                        </select>
                    </div>
                    </p>
                    <p>
                      <input type="submit" class="btn btn-primary" name="crawlSubmit" id="crawlSubmit" value="Crawl">
                    </p>

                </form>
                <br>

        {{#if url_history}}
        <div id="user_history">
        <form action ="/" id="reset-form" class="form-inline" method="post">
            <label for="url_history">Search History</label>
                <select name="url_history" id="url_history2">
                <option selected="selected"></option>
                {{#each url_history}}
                  <option>URL: {{this.url}} | Search Term: {{this.keyword}} | Levels: {{this.max_levels}} | Crawl Type: {{this.crawl_type}}</option>
                {{/each}}  
                </select>
             <input type="submit" class="btn btn-primary btn-xs" name="resetSubmit" id="resetSubmit" value="Clear History">
                
        </form>
        </div>
        {{/if}}
            </div>

        <div id="scraper-content">
        </div>
    </div>
</section>



